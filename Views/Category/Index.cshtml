@model IEnumerable<AccessLayer.categories>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.categoryID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        using (Html.BeginForm("Delete", "Category", new { id = item.categoryID }))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.categoryID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.categoryID }) |
                    <input type="submit" value="Delete Category" onclick="return confirm('Are you sure that you want to delete @item.CategoryName')" />
                </td>
            </tr>
        }
    }
    @Html.ActionLink("Back to product List", "Index", "Product")
    </table>
